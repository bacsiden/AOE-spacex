@{
    Layout = null;
    var url = Context.Request.Path.ToString().ToLower();
}
@model List<AOE.Application.Base.Models.LeftMenu>
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">

        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="index.html"><i class="menu-icon fa fa-laptop"></i>Dashboard </a>
                </li>
                <li class="menu-title">UI elements</li><!-- /.menu-title -->
                @foreach (var item in Model)
                {
                    if (item.Children.Any())
                    {
                        <li class="menu-item-has-children dropdown">
                            <a href="@item.Link" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon @item.Icon"></i>@item.Title</a>
                            <ul class="sub-menu children dropdown-menu">
                                @foreach (var subItem in item.Children)
                                {
                                    <li class=""><i class="@subItem.Icon"></i><a href="@subItem.Link">@subItem.Title</a></li>
                                }
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@item.Link"><i class="menu-icon @item.Icon"></i> @item.Title</a></li>
                    }
                }
            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>
</aside><!-- /#left-panel -->