@{
    var data = AOE.Web.Controllers.HomeController.GetData(ViewContext.HttpContext.Request, "certifications");
}
<div id="banner-area">
    <img src="/images/banner/banner2.jpg" alt="" />
    <div class="parallax-overlay"></div>
    <!-- Subpage title start -->
    <div class="banner-title-content">
        <div class="text-center">
            <h2>@data.title0</h2>
            <ul class="breadcrumb">
                <li>Home</li>
                <li> @data.title0</li>
            </ul>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->
<!-- Main container start -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="post-content">
                    <div class="post-image-wrapper">
                        <img src="~/images/certificate/cer1.jpg" class="img-responsive" alt="" />
                    </div><!-- post image end -->
                    <p></p>


                </div><!--/ post content end -->

            </div><!--/ Content col end -->

            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="post-content">
                    <div class="post-image-wrapper">
                        <img src="~/images/certificate/cer2.jpg" class="img-responsive" alt="" />
                    </div><!-- post image end -->
                    <p></p>


                </div><!--/ post content end -->

            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <h3 style="margin-top: 0;">
                    @data.title
                </h3>
                <p style="text-align: left; color:lightcoral">@data.title1</p>
                @foreach (var item in data.texts)
                {
                    <p style="text-align: left;">
                        <span class="fa fa-check-circle" style="font-size: 0.8em;color: green; margin-right: 5px"></span> @item
                    </p>
                }
            </div>
        </div>
    </div><!--/  Container end-->
</section>
