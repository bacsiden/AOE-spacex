@{
    var dataUs = AOE.Web.Controllers.HomeController.GetData(ViewContext.HttpContext.Request, "about-us");
    var first = true;
    var data = AOE.Web.Controllers.HomeController.GetData(ViewContext.HttpContext.Request, "content");
}
<div id="banner-area">
    <img src="/images/banner/banner1.jpg" alt="" />
    <div class="parallax-overlay"></div>
    <!-- Subpage title start -->
    <div class="banner-title-content">
        <div class="text-center">
            <h2>@dataUs.title0</h2>
            <ul class="breadcrumb">
                <li>@(AOE.Web.Controllers.HomeController.lang == "-vn" ? "Trang chủ" : "Home") </li>
                <li> @dataUs.title0 </li>
            </ul>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->
<!-- Main container start -->

<section id="main-container">
    <div class="container">

        @*<div class="row">
            <div class="col-md-12 heading">
                <span class="title-icon classic pull-left"><i class="fa fa-suitcase"></i></span>
                <h2 class="title classic">@dataUs.title</h2>
            </div>
        </div>*@

        <div class="row">
            <div class="landing-tab clearfix">
                <ul class="nav nav-tabs nav-stacked col-md-3 col-sm-5">
                    @foreach (var item in dataUs.items)
                    {
                        <li class="@(first?"active": null)">
                            <a class="animated fadeIn" href="#@item.id" data-toggle="tab">
                                <span class="tab-icon"><i class="@item.icon"></i></span>
                                <div class="tab-info">
                                    <h3>@item.titleLeft</h3>
                                </div>
                            </a>
                        </li>
                        first = false;
                    }
                </ul>

                <div class="tab-content col-md-9 col-sm-7">
                    @{
                        first = true;
                    }

                    @foreach (var item in dataUs.items)
                    {
                        <div class="tab-pane @(first?"active": null) animated fadeInRight" id="@item.id">
                            <i class="fa @item.icon big" style="font-size: 120px;"></i>
                            <h3>@item.title</h3>
                            @if (!string.IsNullOrEmpty((string)item.text))
                            {
                                <p>@Html.Raw(item.text)</p>
                            }
                            @foreach (var text in item.texts)
                            {
                                <p><span class='fa fa-check-circle' style='font-size: 0.8em;color: green; margin-right: 5px'></span> @text</p>
                            }
                        </div>
                        first = false;
                    }
                </div><!-- tab content -->
            </div><!-- Overview tab end -->
        </div><!--/ Content row end -->
        <!-- Company Profile -->

    </div><!--/ 1st container end -->

    <div class="gap-60"></div>


</section><!--/ Main container end -->